<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers_y_Main.ActividadesController"
            prefWidth="500" prefHeight="450"
            style="-fx-background-color: #f9f9f9;">
   <children>

      <Text layoutX="180.0" layoutY="40.0" text="Actividades"
            style="-fx-font-size: 22px; -fx-font-weight: bold;" />

      <Text layoutX="40.0" layoutY="90.0" text="Id_Act" />
      <TextField fx:id="txtIdAct" layoutX="180.0" layoutY="70.0" prefWidth="250.0" />

      <Text layoutX="40.0" layoutY="130.0" text="Nombre_Act" />
      <TextField fx:id="txtNombreAct" layoutX="180.0" layoutY="110.0" prefWidth="250.0" />

      <Text layoutX="40.0" layoutY="170.0" text="Descripcion_Act" />
      <TextField fx:id="txtDescripcionAct" layoutX="180.0" layoutY="150.0" prefWidth="250.0" />

      <Text layoutX="40.0" layoutY="210.0" text="Id_Localizacion_Act" />
      <TextField fx:id="txtIdLocalizacionAct" layoutX="180.0" layoutY="190.0" prefWidth="250.0" />

      <Text layoutX="40.0" layoutY="250.0" text="Id_Entrenador_Act" />
      <TextField fx:id="txtIdEntrenadorAct" layoutX="180.0" layoutY="230.0" prefWidth="250.0" />

      <Label fx:id="lblEstado" layoutX="40.0" layoutY="290.0" text="Estado: " style="-fx-text-fill: #007aff;" />

      <Button fx:id="btnGuardar" layoutX="180.0" layoutY="330.0" text="Guardar"
              onAction="#guardarActividad"
              style="-fx-background-color: #007aff; -fx-text-fill: white; -fx-font-weight: bold;" />

   </children>
</AnchorPane>
